extends ../base/base.jade

block title
	title Главная страница

block content
	// BEGIN HEADER 
	header.header
		.container
			.top-line
				.top-line__logo
					.logo
						a(href="#").logo__link
							img(src="media/img/logo.png", alt="")
				.top-line__btn
					a(href="#").btn.toOrder Подписаться
			.header__title ЭКОНОМЬТЕ НА ЖИДКОСТЯХ ДЛЯ <br>ВЕЙПИНГА ДО 50% И ПОЛУЧАЙТЕ НОВЫЕ <br>ЭКСКЛЮЗИВНЫЕ АРОМАТЫ
			.header__subtitle Первый сервис подписки на премиальные жидкости <br>для вейпинга в России
			.header__btn
				a(href="#").btn.toOrder Подписаться
	// END HEADER 

	// BEGIN HOWTO 
	.howto
		.container
			.row
				.col-6
					.title Почему Ejuicebox.ru
					img(src="media/images/bootle.jpg", alt="").howto__img
					.howto__text
						p Из более чем 1500 жидкостей для электронных сигарет мы выбираем для Вас лучшие и закупаем по оптимальным ценам.
						p Каждый месяц мы доставляем коробку жидкостей прямо к вам домой. Вы экономите до 50% на покупке и каждый месяц получаете новые вкусы и бренды.
					.howto__btn
						a(href="#").btn.toOrder Подписаться
	// END HOWTO 

	// BEGIN TIME-LINE 
	.time-line
		.container
			.time-line__title
				span как это работает
			.time-line__body
				.row
					.col-3
						i.icon.icon_cursor
						p Выбираете объем коробки и содержание никотина.
					.col-3
						i.icon.icon_list
						p Оформляете подписку.
					.col-3
						i.icon.icon_air
						p 25 числа каждого месяца мы отправляем Вам вашу персонально подобраную коробку.
					.col-3
						i.icon.icon_check
						p Получаете коробку и наслаждаетесь густым и вкусным паром.
				.time-line__line
					.time-line__dot
						span
					.time-line__dot
						span
					.time-line__dot
						span
					.time-line__dot
						span
	// END TIME-LINE 

	// BEGIN PLANS 
	.plans
		.container
			.plan
				.triangle.triangle_max
					.triangle__text Максимум <br>экономии
				.plan__title platinum
				.plan__count 11 бутылочек 
				.plan__img
				.plan__oldprice Обычная цена -
					s 10000
					| р.
				.plan__price
					span.rubl Р
					| 7000
				.plan__btn
					a(href="#").btn.toOrder Подписаться
			.plan.plan_big
				.triangle
					.triangle__text Хит <br>продаж

				.plan__title GOLD
				.plan__count 5 бутылочек 
				.plan__img
				.plan__oldprice Обычная цена -
					s 5000
					| р.
				.plan__price
					span.rubl Р
					| 3500
				.plan__btn
					a(href="#").btn.toOrder Подписаться
			.plan
				.plan__title SILVER
				.plan__count 3 бутылочки 
				.plan__img
				.plan__oldprice Обычная цена -
					s 3000
					| р.
				.plan__price
					span.rubl Р
					| 2000
				.plan__btn
					a(href="#").btn.toOrder Подписаться
	// END PLANS 

	// BEGIN ORDER 
	.order
		.container
			.order__title Для заказа заполните следующие поля
			form(action="/").form.submit-form
				.form__line
					.form__control
						input(type="text" placeholder="Имя" name="name").input
					.form__control
						input(type="tel" placeholder="Телефон" name="phone").input.data-inputmask
					.form__control
						select(name="nikotin" placeholder="Содержание никотина").select
							option(value="") Содержание никотина
							option(value="0") Без никотина
							option(value="3") 3 мг
							option(value="6") 6 мг
					.form__control
						button(type="submit").btn подписаться
	// END ORDER 

	// BEGIN FOOTER 
	footer.footer
		.container
			.copyright Copyright © 2016 Ejuicebox, All rights reserved.
	// END FOOTER 

block popup
	.popup#popup-succes
		.popup__title Ваш заказ оформлен
		.popup__text Наш менеджер свяжится с вами в ближайшее время.